{
  "name": "Litera5",
  "description": "Возможность проверять текст в любом редакторе текста!",
  "version": "0.1.4",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "serviceWorker.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentSpellcheck.js"
      ],
      "css": [
        "styles/contentSpellcheck.css"
      ]
    },
    {
      "matches": [
        "*://*/cabinet/api/",
        "*://*/*/cabinet/api/"
      ],
      "js": [
        "contentAutoconfig.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Litera5",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/icon16.png",
      "32": "/icon/icon32.png",
      "48": "/icon/icon48.png",
      "128": "/icon/icon128.png"
    }
  },
  "icons": {
    "16": "/icon/icon16.png",
    "32": "/icon/icon32.png",
    "48": "/icon/icon48.png",
    "128": "/icon/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@litera5.ru"
    }
  }
}