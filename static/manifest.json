{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "author": "__MSG_extensionDescription__",
  "default_locale": "ru",
  "homepage_url": "https://litera5.ru/browser-addon/",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentSpellcheck.js"
      ],
      "css": [
        "styles/contentSpellcheck.css"
      ]
    },
    {
      "matches": [
        "*://*/cabinet/api/",
        "*://*/*/cabinet/api/"
      ],
      "js": [
        "contentAutoconfig.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Litera5",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/icon16.png",
      "32": "/icon/icon32.png",
      "48": "/icon/icon48.png",
      "128": "/icon/icon128.png"
    }
  },
  "icons": {
    "16": "/icon/icon16.png",
    "32": "/icon/icon32.png",
    "48": "/icon/icon48.png",
    "128": "/icon/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@litera5.ru"
    }
  }
}