{
  "name": "litera5-browser-plugin",
  "version": "0.1.4",
  "description": "Плагин для браузера системы корпоративной проверки правописания Литера5",
  "scripts": {
    "start": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint --ext .ts,.js --max-warnings=0 .",
    "prettier": "prettier --write",
    "clean": "rimraf ./dist",
    "prepare": "husky install",
    "test:watch": "jest --watch",
    "test": "jest --coverage --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/orfogrammatika/litera5-browser-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/orfogrammatika/litera5-browser-plugin/issues"
  },
  "homepage": "https://github.com/orfogrammatika/litera5-browser-plugin#readme",
  "author": {
    "name": "Konstantin Borisov",
    "email": "smeagol74@gmail.com",
    "url": "https://github.com/smeagol74"
  },
  "keywords": [
    "chromium",
    "orfogrammatika",
    "orfogrammka",
    "litera5",
    "plugin",
    "javascript",
    "typescript"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-transform-modules-commonjs": "^7.18.2",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/chrome": "^0.0.171",
    "@types/jest": "^28.1.2",
    "@types/lodash": "^4.14.182",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-webpack-plugin": "^3.1.1",
    "husky": "^7.0.4",
    "jest": "^28.1.1",
    "lint-staged": "^12.1.4",
    "mini-css-extract-plugin": "^2.4.5",
    "node-sass": "^7.0.0",
    "prettier": "^2.5.1",
    "sass-loader": "^12.4.0",
    "ts-jest": "^28.0.5",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.5",
    "js-logger": "^1.6.1",
    "litera5-api-js-client": "orfogrammatika/litera5-api-js-client",
    "lodash": "^4.17.21",
    "normalize.css": "^8.0.1",
    "webextension-polyfill": "^0.9.0"
  },
  "browserslist": "> 0.25%, not dead",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
